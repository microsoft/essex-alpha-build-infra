{
	"compilerOptions": {
		"outDir": "lib",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": ["ESNext"],
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/index.ts"],
	"exclude": ["**/*.spec.ts*"]
}
