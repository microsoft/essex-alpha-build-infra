{
	"name": "@essex/alpha-build-utils",
	"private": true,
	"license": "MIT",
	"contributors": [
		"David Tittsworth <datit@microsoft.com>",
		"Chris Trevino <chtrevin@microsoft.com>"
	],
	"scripts": {
		"essex": "node ./packages/scripts/lib/index.js",
		"clean": "lerna run clean --stream --parallel",
		"build": "lerna run build --stream",
		"test": "yarn essex test",
		"release:publish": "lerna publish",
		"release": "run-s clean build release:publish",
		"lint": "yarn essex lint --docs --fix",
		"prettify": "yarn essex prettify",
		"audit_dependencies": "yarn essex audit",
		"audit": "yarn essex audit",
		"git_is_clean": "yarn essex git-is-clean",
		"ci": "run-s build lint test git_is_clean audit"
	},
	"workspaces": {
		"packages": [
			"packages/scripts",
			"packages/config/*",
			"packages/steps/*",
			"packages/util/*"
		]
	},
	"devDependencies": {
		"husky": "^4.2.5",
		"lerna": "^3.22.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.0.5",
		"typescript": "^3.9.7"
	},
	"prettier": "./packages/config/prettier-config",
	"husky": {
		"hooks": {
			"pre-commit": "yarn essex pre-commit",
			"commit-msg": "yarn essex commit-msg"
		}
	}
}
