{
	"name": "@essex/alpha-build-utils",
	"private": true,
	"license": "MIT",
	"contributors": [
		"David Tittsworth <datit@microsoft.com>",
		"Chris Trevino <chtrevin@microsoft.com>"
	],
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"essex": "node ./packages/scripts/lib/index.js",
		"clean": "pnpm clean -r --stream --parallel",
		"build": "pnpm build -r --stream",
		"test": "pnpm essex -- test",
		"release:publish": "pnpm publish",
		"release": "run-s clean build release:publish",
		"lint": "pnpm essex -- lint --docs --fix",
		"prettify": "pnpm essex -- prettify",
		"git_is_clean": "pnpm essex -- git-is-clean",
		"ci": "run-s build lint test git_is_clean"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@essex/eslint-config": "^9.2.1",
		"@essex/eslint-plugin": "^9.2.1",
		"@essex/jest-config": "^9.2.1",
		"@essex/prettier-config": "^9.2.1",
		"@types/jest": "^26.0.13",
		"husky": "^4.3.0",
		"jest-junit-reporter": "^1.1.0",
		"lint-staged": "^10.3.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.0.5",
		"ts-jest": "~26.3.0",
		"typescript": "^4.0.2"
	},
	"prettier": "@essex/prettier-config",
	"husky": {
		"hooks": {
			"pre-commit": "pnpm essex -- pre-commit",
			"commit-msg": "pnpm essex -- commit-msg"
		}
	}
}
